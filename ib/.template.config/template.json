{
  "$schema": "http://json.schemastore.org/template",
  "author": "Roman Kuzmin",
  "classifications": [
    "Invoke-Build",
    "Script"
  ],
  "name": "Invoke-Build script",
  "identity": "ib",
  "shortName": "ib",
  "sourceName": "MyProject",
  "preferNameDirectory": true,
  "tags": {
    "language": "PowerShell",
    "type": "item"
  },
  "symbols": {
    "bootstrap": {
      "type": "parameter",
      "dataType": "string",
      "defaultValue": "",
      "replaces": "MyVersion"
    },
    "scope": {
      "type": "parameter",
      "dataType": "choice",
      "defaultValue": "CurrentUser",
      "replaces": "MyScope",
      "choices": [
        {
          "choice": "CurrentUser",
          "description": "Installs module in a location for the current user."
        },
        {
          "choice": "AllUsers",
          "description": "Installs module in a location for all users."
        }
      ]
    },
    "restore": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    }
  }
}